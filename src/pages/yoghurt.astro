---
import Layout from '~/layouts/PageLayout.astro';
// import VisiMisi from '~/components/widgets/VisiMisi.astro';

const metadata = {
  title: 'Yoghurt',
};
const melon = {
    src: '/assets/images/yoghurt/MELON.png', // Ganti dengan path gambar yang sesuai
  };
  const original = {
    src: '/assets/images/yoghurt/ORIGINAL.png', // Ganti dengan path gambar yang sesuai
  };
  const pandan = {
    src: '/assets/images/yoghurt/PANDAN.png', // Ganti dengan path gambar yang sesuai
  };
  const strawberry = {
    src: '/assets/images/yoghurt/STRAWBERRY.png', // Ganti dengan path gambar yang sesuai
  };
---

<Layout metadata={metadata}>
  <h1 class="text-4xl font-bold text-center mb-8 text-gray-800 dark:text-white">Yoghurt</h1>

  <!-- Products Card Section -->
  <div class="container mx-auto px-4 py-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Strawberry Flavor -->
    <div class="flex flex-col bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <img src={strawberry.src} alt="Yoghurt Susu Sapi Strawberry" class="w-full h-56 object-cover">
      <div class="p-6 flex-1">
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">Yoghurt Susu Sapi Strawberry</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4">Yoghurt susu sapi segar dengan rasa strawberry yang menyegarkan.</p>
        <p class="text-xl font-bold text-gray-800 dark:text-white mb-4">Rp 10,000</p>
        <a href="https://wa.me/6281237594404?text=Halo%20saya%20ingin%20memesan%20Yoghurt%20Susu%20Strawberry" target="_blank" class="px-6 py-2 bg-green-600 text-white font-semibold rounded-lg text-center block hover:bg-green-700 transition duration-300">
          Pesan
        </a>
      </div>
    </div>

    <!-- Original Flavor -->
    <div class="flex flex-col bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <img src={original.src} alt="Yoghurt Susu Sapi Original" class="w-full h-56 object-cover">
      <div class="p-6 flex-1">
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">Yoghurt Susu Sapi Original</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4">Yoghurt susu sapi original yang alami dan menyehatkan.</p>
        <p class="text-xl font-bold text-gray-800 dark:text-white mb-4">Rp 10,000</p>
        <a href="https://wa.me/6281237594404?text=Halo%20saya%20ingin%20memesan%20Yoghurt%20Susu%20Original" target="_blank" class="px-6 py-2 bg-green-600 text-white font-semibold rounded-lg text-center block hover:bg-green-700 transition duration-300">
          Pesan
        </a>
      </div>
    </div>

    <!-- Pandan Flavor -->
    <div class="flex flex-col bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <img src={pandan.src} alt="Yoghurt Susu Sapi Pandan" class="w-full h-56 object-cover">
      <div class="p-6 flex-1">
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">Yoghurt Susu Sapi Pandan</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4">Yoghurt susu sapi dengan aroma pandan yang harum dan lezat.</p>
        <p class="text-xl font-bold text-gray-800 dark:text-white mb-4">Rp 10,000</p>
        <a href="https://wa.me/6281237594404?text=Halo%20saya%20ingin%20memesan%20Yoghurt%20Susu%20Pandan" target="_blank" class="px-6 py-2 bg-green-600 text-white font-semibold rounded-lg text-center block hover:bg-green-700 transition duration-300">
          Pesan
        </a>
      </div>
    </div>

    <!-- Melon Flavor -->
    <div class="flex flex-col bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <img src={melon.src} alt="Yoghurt Susu Sapi Melon" class="w-full h-56 object-cover">
      <div class="p-6 flex-1">
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">Yoghurt Susu Sapi Melon</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4">Yoghurt susu sapi segar dengan rasa melon yang unik dan segar.</p>
        <p class="text-xl font-bold text-gray-800 dark:text-white mb-4">Rp 10,000</p>
        <a href="https://wa.me/6281237594404?text=Halo%20saya%20ingin%20memesan%20Yoghurt%20Susu%20Melon" target="_blank" class="px-6 py-2 bg-green-600 text-white font-semibold rounded-lg text-center block hover:bg-green-700 transition duration-300">
          Pesan
        </a>
      </div>
    </div>
  </div>
</Layout>
