<Layout metadata={metadata}>
  <!-- Hero Image Section -->
  <div class="relative w-full h-[20rem] sm:h-[30rem] md:h-[40rem] lg:h-[50rem]"> <!-- Memperpanjang tinggi gambar -->
    <img 
      src={heroImage.src} 
      alt={heroImage.alt}
